<style>
	h1 {
		text-align: center;
		margin-top: 20px;
	}

	.profile-card {
		max-width: 400px;
		margin: 0 auto;
		padding: 20px;
		background-color: #41d689;
		border-radius: 5px;
		text-align: center;
	}

	.profile-card p {
		margin-bottom: 10px;
	}

	.profile-card .btnMios {
		display: block;
		margin: 20px auto;
		padding: 10px 20px;
		background-color: #8311b8;
		color:#c89ef0;
		border: none;
		border-radius: 5px;
		font-size: 16px;
		cursor: pointer;
	}

	.profile-card .btnMios:hover {
		background-color: #6a11b8;
	}

	.profile-card a {
		display: block;
		margin-bottom: 10px;
		color: #3511b8;
		text-decoration: none;
		font-weight: bold;
	}
</style>


<h1>Mi Perfil</h1>

<div class="profile-card">
	<p>Bienvenido, {{user.nombre}} {{user.apellido}}!</p>
	<p>Rol: {{user.role}}</p>

	<form action="/api/users/logout" method="POST">
		<button class="btnMios" type="submit">Logout</button>
	</form>
	<a class="btnMios" href="/api/users">Traer usuarios existentes</a>

	{{#if this.isAdmin}}
	<a class="btnMios" href="/realtimeproducts">Modificar Productos</a>
	<a class="btnMios" href="/api/users">Limpieza de usuarios inactivos</a> 

	{{else}}
	{{#if this.isPremium}}
	<a class="btnMios" href="/realtimeproducts">Panel Premium</a>
	{{/if}}
	<a class="btnMios" href="/chat">Chat en vivo</a>
	<a class="btnMios" href="/products">Tienda</a>
	<a class="btnMios" href="/api/users/requestAdmin">Quieres ser admin?</a>

	{{/if}}
</div>